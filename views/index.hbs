<div class="c-form">
    <section class="mb-4">

        <!--Section heading-->
        <h2 class="h1-responsive font-weight-bold text-center my-4">Leave Your Feedback</h2>
        <!--Section description-->
        <p class="text-center w-responsive mx-auto mb-5">Leave your valuable feedback ,so that we can serve
            you a better service . Your feedback helps us to serve you better.</p>

        <div class="row">

            <!--Grid column-->
            <div class="col-md-9 mb-md-0 mb-5">
                <form id="contact-form" name="contact-form" action="/api/feedback" method="POST">


                    {{!-- message --}}
                    {{#each alert}}
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <strong>{{this.msg}}</strong>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    {{/each}}
                    {{!-- message --}}


                    <!--Grid row-->
                    <div class="row">

                        <!--Grid column-->
                        <div class="col-md-6">
                            <div class="md-form mb-0">
                                <label for="name" class="">Your name</label>
                                <input type="text" id="name" name="name" class="form-control" autocomplete="no">

                            </div>
                        </div>
                        <!--Grid column-->

                        <!--Grid column-->
                        <div class="col-md-6">
                            <div class="md-form mb-0">
                                <label for="email" class="">Your email</label>
                                <input type="text" id="email" name="email" class="form-control" autocomplete="no">

                            </div>
                        </div>
                        <!--Grid column-->

                    </div>
                    <!--Grid row-->


                    <!--Grid row-->

                    <!--Grid row-->
                    <div class="row">

                        <!--Grid column-->
                        <div class="col-md-12">

                            <div class="md-form">
                                <label for="message">Your message</label>
                                <textarea type="text" id="message" name="message" rows="3"
                                    class="form-control md-textarea"></textarea>

                            </div>

                        </div>
                    </div>
                    <br>
                    <!--Grid row-->
                    <button type="send" class="btn btn-primary">Send</button>
                </form>
